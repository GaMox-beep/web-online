<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
     <link href="~/Content/Custom_Style/Footer.css" rel="stylesheet" />
    <style>
        .navbar-nav .nav-link:hover {
            background-color: #808080; /* Màu xám khi hover */
            color: white; /* Giữ màu chữ là trắng */
            border-radius: 5px; /* Bo tròn nhẹ góc nếu muốn */
            
        }
        .video-container {
            position: relative;
            width: 100%;
            overflow: hidden;
        }

            .video-container video {
                width: 50%;
                height: 50%;
            }

        .logoweb {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px 0; /* khoảng cách trên và dưới, tùy chỉnh nếu cần */
            width: 100%; /* Đảm bảo phần tử logo chiếm toàn bộ chiều ngang */
        }
            .logoweb img {
                transform: scale(1.5); /* Điều chỉnh giá trị scale theo mong muốn, ví dụ 1.2 là tăng 20% kích thước */
                max-width: 100%; /* Đảm bảo logo không vượt quá kích thước của div */
            }
        .dropdown {
            position: relative;
            display: inline-block;
        }
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }
        /* Show the dropdown menu on hover */
        .dropdown:hover .dropdown-content {
            display: block;
        }



   

      
        
    </style>
</head>
<body>
    <header>

        <div class="logoweb">
            <img src="~/Content/Images/logo__2_-removebg-preview.png" style="height:100px;" />
        </div>

    </header>
    @if (ViewContext.RouteData.Values["action"].ToString() == "Index2" && ViewContext.RouteData.Values["controller"].ToString() == "Home")
    {
        <div class="video-container">
            <video autoplay muted loop style="width: 100%; height: auto;">
                <source src="~/assets/Hero Pages/Nike ads Motion Graphics.mp4" type="video/mp4">
                Trình duyệt của bạn không hỗ trợ video.
            </video>
        </div>
    }
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark" style="background: linear-gradient(to right,black 60%, #00334d 100%) ;position:sticky ;top:0;width:100%;z-index:9999;   ">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">

            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" style="color:white">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("TRANG CHỦ  ", "Index2", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("SẢN PHẨM", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("GIỚI THIỆU", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("LIÊN HỆ", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link" href="#">@User.Identity.Name</a> <!-- Hiển thị tên tài khoản -->
                                <div class="dropdown-content">
                                    <a href="@Url.Action("Profile","Account")">Thông tin tài khoản    </a>
                                    <a href="@Url.Action("OrderHistory","Order")">Lịch sử mua hàng</a>
                                    <a href="@Url.Action("Logout", "Account")">Đăng xuất</a>
                                </div>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("ĐĂNG NHẬP", "Login", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("ĐĂNG KÍ", "Register", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-link"><a href="~/Cart/Index"><i class="fas fa-shopping-cart"></i></a></li>
                    }
                </ul>




            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">
        <div style="min-height:500px;">@RenderBody()</div>
        <hr />
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="footer-col">
                        <h4>company</h4>
                        <ul>
                            <li><a href="#">At HuflitOnline, we're passionate about fashion and committed to delivering exceptional online shopping experiences.</a></li>
                            <li><a href="#">Our mission is to provide high-quality, on-trend clothing that's accessible to everyone, regardless of age, style, or budget.</a></li>
                        </ul>
                    </div>
                    <div class="footer-col">
                        <h4>online shop</h4>
                        <ul>
                            <li><a href="#">Hat</a></li>
                            <li><a href="#">Shoes</a></li>
                            <li><a href="#">Shirt</a></li>
                            <li><a href="#">T-shirt</a></li>
                        </ul>
                    </div>
                    <div class="footer-col">
                        <h4>follow and contact to us</h4>
                        <ul>
                            <li><a href="#"><i class="fas fa-home"></i> Sư Vạn Hạnh, Phường 13, Quận 10, thành phố Hồ Chí Minh.</a>
                            <li><a href="#"><i class="fas fa-envelope"></i> Huflit@gmail.com</a>
                            <li>
                                <a href="#"><i class="fas fa-phone"></i> 028 3863 2052</a>
                                <ul>
                                    <div class="social-links">
                                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                                        <a href="#"><i class="fab fa-twitter"></i></a>
                                        <a href="#"><i class="fab fa-instagram"></i></a>
                                        <a href="#"><i class="fab fa-youtube"></i></a>
                                    </div>
                                    </ul>
                                </ul>
                    </div>
                    <div class="footer-col">
                        <h4>Map</h4>
                        <ul>
